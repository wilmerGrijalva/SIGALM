CREATE TABLE BITACORA 
   (	"BIT_ID" NUMBER(*,0) NOT NULL ENABLE, 
	"BIT_NOMBRE_TABLA" VARCHAR2(80 BYTE) NOT NULL ENABLE, 
	"BIT_ID_TABLA_MODIFICADA" NUMBER(*,0) NOT NULL ENABLE, 
	"BIT_TIPO_TRANSACCION" VARCHAR2(2 BYTE) NOT NULL ENABLE, 
	"BIT_ESTADO_ANTERIOR" VARCHAR2(4000 BYTE) NOT NULL ENABLE, 
	"BIT_ESTADO_NUEVO" VARCHAR2(4000 BYTE) NOT NULL ENABLE, 
	"BIT_HOST" VARCHAR2(50 BYTE) NOT NULL ENABLE, 
	"BIT_IP" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"BIT_OS_USER" VARCHAR2(50 BYTE) NOT NULL ENABLE, 
	"FEC_CREA" TIMESTAMP (6) NOT NULL ENABLE, 
	 CONSTRAINT "PK_BITACORA" PRIMARY KEY ("BIT_ID"));

/* REPORTE DE PRODUCTOS PROXIMOS A VENCER*/
CREATE TABLE ALM_REPORTE_1(
    REP1_ID NUMBER PRIMARY KEY,
    REP1_CODIGO_PRD NUMBER(10),
    REP1_PRODUCTO VARCHAR2(255),
    REP1_PRECIO NUMBER(10,2),
    REP1_FEC_VENCIMIENTO DATE
);

/* REPORTEDE REQUERIMIENTO DEPRODUCTOS A PROVEEDORES*/
CREATE TABLE ALM_REPORTE_2(
    REP2_ID NUMBER PRIMARY KEY,
    REP2_CODIGO_PRD NUMBER(10),
    REP2_PRODUCTO VARCHAR2(255),
    REP2_PROVEEDOR VARCHAR2(500),
    REP2_MONTO NUMBER(10,2),
    REP2_FECHA_REQUERIMIENTO DATE
);

/* REPORTE COMPARATIVO DE CONSUMO ANUAL POR PRODUCTO */
CREATE TABLE ALM_REPORTE_3(
    REP3_ID NUMBER PRIMARY KEY,
    REP3_CODIGO_PRD NUMBER(10),
    REP3_PRODUCTO VARCHAR2(255),
    REP3_MONTO NUMBER(10,2),
    REP3_FECHA DATE
);

/* REPORTE COMPARATIVO DE CONSUMO ANUAL POR ESPECÍFICO */
CREATE TABLE ALM_REPORTE_4(
    REP4_ID NUMBER PRIMARY KEY,
    REP4_CODIGO_ESP NUMBER(10),
    REP4_ESPECIFICO VARCHAR2(255),
    REP4_MONTO NUMBER(10,2),
    REP4_FECHA DATE
);

/* REPORTE COMPARATIVO DE CONSUMO DE PRODUCTOS POR DIRECCION ULTIMOS 6 MESES */
CREATE TABLE ALM_REPORTE_5(
    REP5_ID NUMBER PRIMARY KEY,
    REP5_DIRECCION VARCHAR2(255),
    REP5_CODIGO_PRD NUMBER(10),
    REP5_PRODUCTO VARCHAR2(255),
    REP5_MONTO NUMBER(10,2),
    REP5_FECHA DATE /*AÑOS*/
);

/* REPORTE DE SALDOS DE CONTRATOS */
CREATE TABLE ALM_REPORTE_6(
    REP6_ID NUMBER PRIMARY KEY,
    REP6_PROVEEDOR VARCHAR2(255),
    REP6_CONTRATO VARCHAR2(50),
    REP6_PRODUCTO VARCHAR2(255),
    REP6_MONTO NUMBER(10,2),
    REP6_GASTO NUMBER(10,2),
    REP6_SALDO NUMBER(10,2),
    REP6_FECHA DATE
);

/* REPORTE DE CONSUMO POR DIRECCION */
CREATE TABLE ALM_REPORTE_7(
    REP7_ID NUMBER PRIMARY KEY,
    REP7_DIRECCION VARCHAR2(255),
    REP7_MONTO NUMBER(10,2),
    REP7_FECHA DATE
);

/* REPORTE DE CONSUMO POR ESPECIFICO Y DIRECCION */
CREATE TABLE ALM_REPORTE_8(
    REP8_ID NUMBER PRIMARY KEY,
    REP8_DIRECCION VARCHAR2(255),
    REP8_CODIGO_ESP NUMBER(10),
    REP8_ESPECIFICO VARCHAR2(255),
    REP8_MONTO NUMBER(10,2),
    REP8_FECHA DATE
);

/* REPORTE DE CONSUMO DE PRODUCTOS POR DIRECCION */
CREATE TABLE ALM_REPORTE_9(
    REP9_ID NUMBER PRIMARY KEY,
    REP9_DIRECCION VARCHAR2(255),
    REP9_CODIGO_PRD NUMBER(10),
    REP9_PRODUCTO VARCHAR2(255),
    REP9_FECHA DATE,
    REP9_MONTO NUMBER(6,2)
);

/* REPORTE DE EXISTENCIAS A LA FECHA */
CREATE TABLE ALM_REPORTE_10(
    REP10_ID NUMBER PRIMARY KEY,
    REP10_CODIGO_PRD NUMBER(10),
    REP10_PRODUCTO VARCHAR2(255),
    REP10_FEC_VENCIMIENTO DATE,
    REP10_PRECIO NUMBER(6,2),
    REP10_FECHA DATE
);

/* REPORTEDE PRODUCTOS SIN MOVIMIENTO */
CREATE TABLE ALM_REPORTE_11(
    REP11_ID NUMBER PRIMARY KEY,
    REP11_CODIGO_PRD NUMBER(10),
    REP11_PRODUCTO VARCHAR2(255),
    REP11_UNIDAD_MEDIDA VARCHAR2(50),
    REP11_EXISTENCIA NUMBER(10),
    REP11_COSTO_PROM NUMBER(10,2),
    REP11_MONTO NUMBER(10,2),
    REP11_ULTIMA_ENTRADA DATE,
    REP11_ULTIMA_SALIDA DATE,
    REP11_FECHA DATE
);
